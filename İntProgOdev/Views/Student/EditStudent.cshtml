@model Ogrenci

@{
    ViewData["Title"] = "Öğrenci Düzenle";
}

<div class="container d-flex justify-content-center my-5">
    <div class="card shadow-sm" style="width: 50%;">
        <div class="card-body">
            <h2 class="card-title text-center">Öğrenci Düzenleme İşlemi</h2>
            <form asp-action="EditStudent" asp-controller="Student" method="post">
                <div class="mb-3">
                    <label for="Ad" class="form-label">Ad</label>
                    <input asp-for="Ad" class="form-control" id="Ad" placeholder="Adınızı girin" required />
                </div>

                <div class="mb-3">
                    <label for="Soyad" class="form-label">Soyad</label>
                    <input asp-for="Soyad" class="form-control" id="Soyad" placeholder="Soyadınızı girin" required />
                </div>

                <div class="mb-3">
                    <label for="Numara" class="form-label">Numara</label>
                    <input asp-for="Numara" class="form-control" id="Numara" placeholder="Numaranızı girin" required />
                </div>

                <input asp-for="Ogrenciid" type="hidden" />

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
